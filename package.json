{
  "name": "nodejs-microservice-template",
  "version": "1.0.0",
  "description": "A NodeJS microservice template",
  "main": "main.js",
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "containers:start": "npm-run-all -s build compose:start",
    "containers:build": "npm-run-all -s build compose:build",
    "containers:remove": "docker-compose -f dev.Compose.yml down",
    "containers:stop": "docker-compose -f dev.Compose.yml stop",
    "compose:start": "docker-compose -f dev.Compose.yml up",
    "compose:build": "docker-compose -f dev.Compose.yml build",
    "start": "node .",
    "start:dev": "nodemon .",
    "lint": "eslint src tests",
    "lint:fix": "eslint src --fix",
    "test": "npm-run-all -s lint jest",
    "jest": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/logger.js",
      "!**/{config}/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "author": "NÃ©stor Diaz",
  "license": "MIT",
  "dependencies": {
    "awilix": "^3.0.9",
    "body-parser": "^1.18.3",
    "boom": "^7.2.0",
    "chalk": "^2.4.1",
    "config": "^2.0.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-winston": "^3.0.0",
    "http-status-codes": "^1.3.0",
    "pg": "^7.6.1",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.41.2",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "supertest": "^3.3.0"
  }
}
